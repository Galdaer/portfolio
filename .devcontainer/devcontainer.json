{
    "name": "Intelluxe Healthcare AI",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "features": {
        "ghcr.io/devcontainers/features/nvidia-cuda:1": {
            "version": "12.3"
        },
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
        "ghcr.io/devcontainers/features/node:1": {
            "version": "18"
        }
    },
    "hostRequirements": {
        "gpu": "optional"
    },
    "runArgs": [
        "--gpus=all"
    ],
    "containerEnv": {
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.mypy-type-checker",
                "charliermarsh.ruff",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-python.vscode-python-envs",
                "foxundermoon.shell-format",
                "nvidia.nsight-vscode-edition"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3.12",
                "python.linting.enabled": true,
                "python.linting.mypyEnabled": true,
                "ruff.enabled": true
            }
        }
    },
    "postCreateCommand": "sudo mkdir -p /opt/intelluxe/stack/logs && sudo chown -R vscode:vscode /opt/intelluxe && sudo apt update && sudo apt install software-properties-common -y && sudo add-apt-repository ppa:deadsnakes/ppa -y && sudo apt update && sudo apt install python3.12 python3.12-venv python3.12-dev python3-pip -y && sudo ln -sf /usr/bin/python3.12 /usr/local/bin/python && python3.12 -m ensurepip --upgrade && nvidia-smi && make deps -v",
    "forwardPorts": [
        8000,
        5432,
        6379,
        3000,
        11434,
        1000,
        3002,
        8082
    ],
    "portsAttributes": {
        "8000": {
            "label": "Healthcare AI API"
        },
        "5432": {
            "label": "PostgreSQL"
        },
        "6379": {
            "label": "Redis"
        },
        "3000": {
            "label": "Web UI"
        },
        "11434": {
            "label": "Ollama API"
        },
        "1000": {
            "label": "Ollama WebUI"
        },
        "3002": {
            "label": "Grafana"
        },
        "8082": {
            "label": "Traefik Dashboard"
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/.env,target=/workspaces/intelluxe-core/.env,type=bind",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "remoteUser": "vscode"
}