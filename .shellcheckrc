# Look for 'source'd files relative to the checked script
source-path=SCRIPTDIR

# Allow opening any 'source'd file, even if not specified as input
external-sources=true

# Set severity level  
severity=warning

# Function complexity and single responsibility patterns
# SC2001: Consider using ${var//search/replace} instead of sed
# SC2086: Double quote to prevent globbing and word splitting
# SC2162: read without -r will mangle backslashes
# Custom: Functions >20 lines or with multiple logical sections should be refactored
# Custom: Look for functions with mixed concerns (detection + validation patterns)

# Exclude specific directories from analysis
exclude-dir=logs
exclude-dir=.git
exclude-dir=bats-core
exclude-dir=.vscode
exclude-dir=test/bats-core
exclude-dir=data/vector_stores
exclude-dir=data/training/user_samples
exclude-dir=services/user

# Exclude specific files from analysis
exclude-path=./logs/*
exclude-path=./.git/*
exclude-path=./test/bats-core/*
exclude-path=./data/vector_stores/*
exclude-path=./data/training/user_samples/*
