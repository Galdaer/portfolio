# Database Configuration (PostgreSQL-first with API fallback)
# Primary database connection (choose one method):
# Method 1: Single connection string
POSTGRES_URL=postgresql://username:password@localhost:5432/database_name

# Method 2: Individual components (used if POSTGRES_URL is not set)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=username
# POSTGRES_PASSWORD=password
# DATABASE_NAME=intelluxe

# Database pool settings
DB_POOL_SIZE=10
DB_TIMEOUT_MS=5000

# Database behavior configuration
USE_DATABASE_MIRROR=true
FALLBACK_TO_EXTERNAL_API=true

# FHIR/EMR Authentication (for patient data tools)
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret
OAUTH_TOKEN_HOST=https://authorization.cerner.com
OAUTH_AUTHORIZE_PATH=/tenants/your-tenant/protocols/oauth2/profiles/smart-v1/personas/provider/authorize
OAUTH_AUTHORIZATION_METHOD=header
OAUTH_TOKEN_PATH=/tenants/your-tenant/hosts/api.cernermillennium.com/protocols/oauth2/profiles/smart-v1/token
OAUTH_AUDIENCE=https://fhir-ehr.cerner.com/r4/your-tenant
OAUTH_CALLBACK_URL=http://localhost:3456/oauth/callback
OAUTH_SCOPES=user/Patient.read user/Condition.read user/Observation.read user/MedicationRequest.read user/AllergyIntolerance.read user/Procedure.read user/CarePlan.read user/CareTeam.read user/Encounter.read user/Immunization.read
OAUTH_CALLBACK_PORT=3456
FHIR_BASE_URL=https://fhir-ehr.cerner.com/r4/your-tenant

# External API Keys (optional, for higher rate limits or premium features)
PUBMED_API_KEY=optional_for_higher_rate_limits
CLINICAL_TRIALS_API_KEY=optional
FDA_API_KEY=optional
USDA_API_KEY=optional_for_nutrition_data
RAPIDAPI_KEY=optional_for_exercise_data

# Cache settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Logging and monitoring
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true