# Dr. Smith's Personal Intelluxe Configuration
# Encrypted and tied to her system login

# AI Preferences
PREFERRED_AI_MODEL=llama3.1:medical
AI_TEMPERATURE=0.1
MEDICAL_SPECIALTY=family_medicine

# Role and Permissions
INTELLUXE_ROLE=healthcare_provider
PATIENT_ACCESS_LEVEL=assigned_patients
RESEARCH_ACCESS=enabled

# Personal Workflow Settings
AUTO_TRANSCRIPTION=true
CLINICAL_DECISION_SUPPORT=enabled
DRUG_INTERACTION_ALERTS=strict

# UI Preferences
DASHBOARD_LAYOUT=clinical_focused
NOTIFICATION_LEVEL=important_only

# Scispacy Settings
METADATA_PATH=/opt/intelluxe/services/user/scispacy/app/metadata.sample.yml 
DEFAULT_ENRICH=false
# For purely single-shot usage, disable cache via SCISPACY_CACHE=false
SCISPACY_CACHE=true 
# If you expect longer documents, consider raising SCISPACY_CACHE_SIZE to 512
SCISPACY_CACHE_SIZE=256
# If queries are more unique than repeated, you can set SCISPACY_CACHE_TTL to a lower value (e.g., 120) to reduce stale memory.
SCISPACY_CACHE_TTL=300